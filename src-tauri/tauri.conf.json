{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SERVE",
  "version": "1.0.0",
  "identifier": "com.serve.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:3000",
    "distDir": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "SERVE",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false,
        "visible": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "tooltip": "SERVE"
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "KNIGHTABDO",
    "category": "Productivity",
    "shortDescription": "AI that sees patterns",
    "longDescription": "A quiet space for conversations that matter. SERVE speaks with earned authority â€” pattern recognition, parables, and the hard questions beneath the surface.",
    "deb": {
      "depends": []
    }
  },
  "updates": {
    "active": true,
    "url": "https://github.com/KNIGHTABDO/serve/releases/latest/download/latest.json",
    "dialog": true,
    "pubkey": ""
  }
}
